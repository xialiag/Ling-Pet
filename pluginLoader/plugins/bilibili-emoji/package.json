{
  "name": "bilibili-emoji",
  "version": "3.0.0",
  "description": "B站表情包管理、下载和发送（支持DLC，智能提取）",
  "main": "index.ts",
  "type": "module",
  "keywords": [
    "emoji",
    "bilibili",
    "sticker",
    "download",
    "dlc",
    "chat"
  ],
  "author": "Plugin System",
  "license": "MIT",
  "scripts": {
    "scan": "node cli.js scan",
    "search": "node cli.js search-online",
    "download": "node cli.js download"
  },
  "bin": {
    "bilibili-emoji": "./cli.js"
  },
  "capabilities": {
    "hooks": true,
    "components": true,
    "backend": true,
    "tools": true,
    "settings": true,
    "rpc": true,
    "events": true,
    "dom": true
  },
  "backend": {
    "type": "rust",
    "entry": "backend/src/lib.rs"
  },
  "permissions": [
    "storage:read",
    "storage:write",
    "network:request",
    "command:execute",
    "hook:component",
    "hook:store",
    "dom:inject",
    "tauri:invoke",
    "fs:read",
    "fs:write",
    "fs:create",
    "fs:delete"
  ],
  "dependencies": {
    "glob": "^10.0.0"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "pluginMetadata": {
    "category": "entertainment",
    "tags": [
      "emoji",
      "bilibili",
      "chat",
      "sticker"
    ],
    "minAppVersion": "1.0.0",
    "supportedPlatforms": [
      "windows",
      "macos",
      "linux"
    ],
    "configurable": true,
    "hasBackend": true,
    "hasUI": true
  }
}